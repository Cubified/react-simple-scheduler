{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jsx-a11y/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "jsx-a11y"],
  "ignorePatterns": ["*.scss"],
  "rules": {
    "react/prop-types": "off",
    "no-extra-semi": "off"
  },
  "settings": {
    "react": {
      "version": "17.0"
    }
  }
}
